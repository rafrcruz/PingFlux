# Servidor
PORT=3030
HOST=127.0.0.1
LOG_LEVEL=info
DB_PATH=./data/netmon.sqlite

# Flags de runtime
ENABLE_WEB=true
ENABLE_PING=true
ENABLE_DNS=true
ENABLE_HTTP=true

# Ping
PING_TARGETS=8.8.8.8
PING_INTERVAL_S=60
PING_TIMEOUT_MS=3000
PING_METHOD=auto

# DNS
DNS_HOSTNAMES=google.com
DNS_INTERVAL_S=60
DNS_TIMEOUT_MS=3000

# HTTP
HTTP_URLS=https://example.com
HTTP_INTERVAL_S=60
HTTP_TIMEOUT_MS=5000

# Live metrics
LIVE_PUSH_INTERVAL_MS=2000
LIVE_USE_WINDOWS=true

# UI
UI_DEFAULT_TARGET=8.8.8.8
UI_SSE_RETRY_MS=3000
UI_SPARKLINE_MINUTES=15
THRESH_P95_WARN_MS=150
THRESH_P95_CRIT_MS=400
THRESH_LOSS_WARN_PCT=1
THRESH_LOSS_CRIT_PCT=5
THRESH_DNS_WARN_MS=200
THRESH_DNS_CRIT_MS=500
THRESH_TTFB_WARN_MS=500
THRESH_TTFB_CRIT_MS=1500

# Traceroute
TRACEROUTE_DEFAULT_TARGET=8.8.8.8
TRACEROUTE_MAX_HOPS=30
TRACEROUTE_TIMEOUT_MS=10000

# Manutenção
RETENTION_RAW_DAYS=30
RETENTION_WINDOWS_DAYS=365
MAINTENANCE_MAX_ROWS_PER_RUN=0
