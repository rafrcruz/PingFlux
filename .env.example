# Configurações básicas
NODE_ENV=development
PORT=3030
# Automatic port fallback when configured port is busy (on | off)
PORT_FALLBACK=on
LOG_LEVEL=info
DB_PATH=./data/netmon.sqlite

# Coletores
ENABLE_WEB=true
ENABLE_PING=true
ENABLE_DNS=true
ENABLE_HTTP=true

PING_TARGETS=1.1.1.1,8.8.8.8,google.com
PING_INTERVAL_MS=2000
PING_TIMEOUT_MS=1500
PING_METHOD_PREFERENCE=auto

DNS_HOSTNAMES=google.com,cloudflare-dns.com
DNS_INTERVAL_S=60
DNS_TIMEOUT_MS=3000

HTTP_URLS=https://www.google.com,https://1.1.1.1/cdn-cgi/trace
HTTP_INTERVAL_S=60
HTTP_TIMEOUT_MS=5000

# Métricas em tempo real
LIVE_PUSH_INTERVAL_MS=2000
LIVE_USE_WINDOWS=true

# UI
UI_DEFAULT_TARGET=1.1.1.1
UI_SPARKLINE_MINUTES=15
UI_SSE_RETRY_MS=3000

# Limiares (ajuste conforme sua rede)
THRESH_P95_WARN_MS=150
THRESH_P95_CRIT_MS=300
THRESH_LOSS_WARN_PCT=0.5
THRESH_LOSS_CRIT_PCT=2.0
THRESH_TTFB_WARN_MS=300
THRESH_TTFB_CRIT_MS=800
THRESH_DNS_WARN_MS=150
THRESH_DNS_CRIT_MS=400

# Traceroute
TRACEROUTE_DEFAULT_TARGET=8.8.8.8
TRACEROUTE_MAX_HOPS=30
TRACEROUTE_TIMEOUT_MS=10000

# Retenção
RETENTION_RAW_DAYS=30
RETENTION_WINDOWS_DAYS=365
MAINTENANCE_MAX_ROWS_PER_RUN=50000
